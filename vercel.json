{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "maxDuration": 30
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/contact",
      "destination": "/api/contact.ts"
    },
    {
      "source": "/api/quotes",
      "destination": "/api/quotes.ts"
    },
    {
      "source": "/api/analytics/overview",
      "destination": "/api/analytics/overview.ts"
    },
    {
      "source": "/api/analytics/realtime",
      "destination": "/api/analytics/realtime.ts"
    },
    {
      "source": "/api/analytics/conversions",
      "destination": "/api/analytics/conversions.ts"
    },
    {
      "source": "/api/admin/products",
      "destination": "/api/admin/products.ts"
    },
    {
      "source": "/api/admin/blog",
      "destination": "/api/admin/blog.ts"
    },
    {
      "source": "/api/admin/services",
      "destination": "/api/admin/services.ts"
    },
    {
      "source": "/api/admin/testimonials",
      "destination": "/api/admin/testimonials.ts"
    },
    {
      "source": "/api/admin/quotes",
      "destination": "/api/admin/quotes.ts"
    },
    {
      "source": "/api/admin/contacts",
      "destination": "/api/admin/contacts.ts"
    },
    {
      "source": "/api/cors-test",
      "destination": "/api/cors-test.ts"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Content-Type, Authorization, X-Requested-With, Accept, Origin"
        },
        {
          "key": "Access-Control-Allow-Credentials",
          "value": "true"
        }
      ]
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}

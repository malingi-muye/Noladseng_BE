###############################################
# Frontend (Vite) - safe to expose to browser #
###############################################

# Base URL for your backend API (use your Vercel backend in prod)
# Example: https://your-project-be.vercel.app/api
VITE_API_URL=

# Supabase client credentials (Anon key only)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=

# Public integrations
VITE_GA4_MEASUREMENT_ID=
VITE_PUBLIC_BUILDER_KEY=
VITE_ENABLE_TAWK=production
VITE_TAWK_PROPERTY_ID=
VITE_TAWK_WIDGET_ID=

#############################
# Backend (Serverless only) #
#############################

NODE_ENV=development
PORT=8000

# CORS
# Comma-separated allowed origins (frontend sites)
CORS_ORIGIN=http://localhost:5173

# Upload limits
UPLOAD_MAX_SIZE=10mb

# Supabase server credentials (DO NOT prefix with VITE_)
SUPABASE_URL=
SUPABASE_ANON_KEY=
SUPABASE_SERVICE_ROLE=

# Email (SMTP)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
EMAIL_FROM="Nolads Engineering <no-reply@example.com>"
CONTACT_RECIPIENT=
QUOTES_RECIPIENT=

# Google Analytics Service Account (server)
GA4_PROPERTY_ID=
GA4_CLIENT_EMAIL=
GA4_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n<private key>\n-----END PRIVATE KEY-----"

# Logging
LOG_LEVEL=info
